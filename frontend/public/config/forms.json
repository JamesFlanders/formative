[
  {
    "id": "get-activity-when-bored",
    "name": "Get Activity when Bored",
    "image": "sprint.svg",
    "description": "Get an activity so you can brighten your day when bored.",
    "fields": [
      {
        "id": "type",
        "name": "Type",
        "type": "select",
        "required": true,
        "options": [
          "social",
          "recreational",
          "music",
          "diy"
        ]
      },
      {
        "id": "participants",
        "name": "Participants",
        "type": "number"
      }
    ],
    "actions": [
      {
        "action": "api",
        "url": "https://www.boredapi.com/api/activity?participants={{participants}}&type={{type}}",
        "method": "GET",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    ]
  },
  {
    "id": "get-information-postal-code",
    "name": "Get Information by Postal Code",
    "image": "markunreadmailbox.svg",
    "description": "Get some information about a city through giving the postal code and country code.",
    "fields": [
      {
        "id": "country-code",
        "name": "Country Code",
        "type": "select",
        "required": true,
        "options": [
          "be",
          "nl",
          "us"
        ]
      },
      {
        "id": "postal-code",
        "name": "Postal Code",
        "type": "number",
        "required": true
      }
    ],
    "actions": [
      {
        "action": "api",
        "url": "https://api.zippopotam.us/{{country-code}}/{{postal-code}}",
        "method": "GET"
      },
      {
        "action": "api",
        "url": "https://restcountries.com/v3.1/alpha/{{country-code}}",
        "method": "GET"
      }
    ]
  },
  {
    "id": "run-a-post-to-anything",
    "name": "Run a POST to Anything",
    "image": "asterisk.svg",
    "description": "Run a POST to Anything, an API for testing calls towards it.",
    "fields": [
      {
        "id": "short-text",
        "name": "Short Text",
        "type": "shortText",
        "required": true
      },
      {
        "id": "long-text",
        "name": "Long Text",
        "type": "longText",
        "required": true
      },
      {
        "id": "number",
        "name": "Number",
        "type": "number",
        "required": true
      },
      {
        "id": "email",
        "name": "Email",
        "type": "email",
        "required": true
      },
      {
        "id": "checkbox",
        "name": "Checkbox",
        "type": "checkbox",
        "defaultValue": true,
        "required": true
      },
      {
        "id": "date",
        "name": "Date",
        "type": "date",
        "required": true
      },
      {
        "id": "radio",
        "name": "Radio",
        "type": "radio",
        "defaultValue": "Option 2",
        "required": true,
        "options": [
          "Option 1",
          "Option 2",
          "Option 3"
        ]
      },
      {
        "id": "select",
        "name": "Select",
        "type": "select",
        "defaultValue": "Option 5",
        "required": true,
        "options": [
          "Option 1",
          "Option 2",
          "Option 3",
          "Option 4",
          "Option 5",
          "Option 6"
        ]
      },
      {
        "id": "multiselect",
        "name": "Multiselect",
        "type": "multiselect",
        "defaultValue": [
          "Option 3",
          "Option 4"
        ],
        "required": true,
        "options": [
          "Option 1",
          "Option 2",
          "Option 3",
          "Option 4"
        ]
      },
      {
        "id": "secret",
        "name": "Secret",
        "type": "secret",
        "required": true
      }
    ],
    "actions": [
      {
        "action": "api",
        "url": "https://httpbin.org/anything",
        "method": "POST",
        "body": {
          "short-text": "{{short-text}}",
          "long-text": "{{long-text}}",
          "email": "{{email}}",
          "secret": "{{secret}}",
          "number": "{{number}}",
          "checkbox": "{{checkbox}}",
          "date": "{{date}}",
          "radio": "{{radio}}",
          "select": "{{select}}",
          "multiselect": "{{multiselect}}"
        }
      }
    ]
  }
]