[
  {
    "id": "configure-customer-status",
    "name": "Configure Customer Status",
    "description": "Configure the customer status.",
    "fields": [
      {
        "id": "customer",
        "name": "Customer",
        "type": "shortText",
        "defaultValue": "John Doe"
      },
      {
        "id": "status",
        "name": "Status",
        "type": "select",
        "defaultValue": [
          "Active"
        ],
        "options": [
          "Active",
          "Inactive"
        ]
      },
      {
        "id": "date",
        "name": "Date",
        "type": "date"
      }
    ],
    "actions": [
      {
        "action": "api",
        "url": "https://www.example.com/?customer={{customer}}&status={{status}}",
        "method": "GET"
      },
      {
        "action": "api",
        "url": "https://www.example.com/",
        "method": "POST",
        "body": {
          "customer": "{{customer}}",
          "status": "{{status}}",
          "date": "{{date}}"
        }
      }
    ]
  }
]