[
  {
    "id": "configure-customer-status",
    "name": "Configure Customer Status",
    "description": "Configure the customer status.",
    "fields": [
      {
        "id": "customer",
        "name": "Customer",
        "type": "shortText",
        "required": true,
        "defaultValue": "John Doe"
      },
      {
        "id": "status",
        "name": "Status",
        "type": "select",
        "defaultValue": [
          "Active"
        ],
        "options": [
          "Active",
          "Inactive"
        ]
      },
      {
        "id": "date",
        "name": "Date",
        "type": "date"
      }
    ],
    "actions": [
      {
        "action": "api",
        "url": "https://www.example.com/?customer={{customer}}&status={{status}}",
        "method": "GET"
      },
      {
        "action": "api",
        "url": "https://www.example.com/",
        "method": "POST",
        "body": {
          "customer": "{{customer}}",
          "status": "{{status}}",
          "date": "{{date}}"
        }
      }
    ]
  },
  {
    "id": "get-activity-when-bored",
    "name": "Get Activity when Bored",
    "description": "Get an activity so you can brighten your day when bored.",
    "fields": [
      {
        "id": "type",
        "name": "Type",
        "type": "select",
        "options": [
          "social",
          "recreational",
          "music",
          "diy"
        ]
      },
      {
        "id": "participants",
        "name": "Participants",
        "type": "number"
      }
    ],
    "actions": [
      {
        "action": "api",
        "url": "https://www.boredapi.com/api/activity?participants={{participants}}&type={{type}}",
        "method": "GET"
      }
    ]
  }
]